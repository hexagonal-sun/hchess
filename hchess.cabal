build-type:          Simple
extra-source-files:  CHANGELOG.md

Library
  hs-source-dirs:     src
  GHC-Options:        -Wall -O2
  default-language:   Haskell2010
  Exposed-Modules:    Perft
                    , PrettyPrint
                    , Fen
                    , Move
                    , Search
                    , Parsers
                    , Game
                    , Piece

  other-modules:      Locus
                    , Board
                    , MoveGen
                    , EnPassant
                    , CastlingRights
                    , Evaluate
                    , Psqt
                    , Rays

  build-depends:      array
                    , base
                    , extra
                    , megaparsec
                    , mtl
                    , template-haskell
                    , vector
                    , th-lift-instances
                    , total-map
                    , containers

executable hchess
  hs-source-dirs:     exe
  main-is:            Main.hs
  GHC-Options:        -Wall -O2
  default-language:   Haskell2010
  other-modules:      Uci
  build-depends:      base
                    , hchess
                    , megaparsec
                    , mtl

Test-Suite test-hchess
  type:               exitcode-stdio-1.0
  GHC-Options:        -Wall
  hs-source-dirs:     tests
  default-language:   Haskell2010
  main-is:            Tests.hs
  build-depends:      base
                    , tasty
                    , tasty-hunit
                    , hchess
